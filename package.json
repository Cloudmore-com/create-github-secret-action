{
  "name": "create-github-secret-action",
  "version": "0.1.0",
  "private": "true",
  "description": "Create or update a Github Secret",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "gliech",
  "license": "MIT",
  "repository": "github:gliech/create-github-secret-action",
  "devDependencies": {
    "@google/semantic-release-replace-plugin": "^1.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@vercel/ncc": "^0.23.0",
    "semantic-release": "^17.1.1"
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^3.0.0",
    "tweetsodium": "0.0.5"
  },
  "release": {
    "repositoryUrl": "git@github.com:gliech/create-github-secret-action.git",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "package.json",
                "package-lock.json"
              ],
              "from": "^  \"version\": \".+\",",
              "to": "  \"version\": \"${nextRelease.version}\"",
              "results": [
                {
                  "file": "package.json",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                },
                {
                  "file": "package-lock.json",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/index.js",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
